generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name  String
  email String
  phone String

  format String // "fisico" or "ebook"

  // Dirección de envío para pedidos físicos
  address String?
  city    String?
  zip     String?
  country String?

  total  Decimal
  status String  @default("PENDING") // PENDING, COMPLETED, FAILED
}
